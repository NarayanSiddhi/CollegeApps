<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminStudent"
    android:background="@drawable/bb2">

    <TextView
        android:id="@+id/enterasadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER AS ADMIN"
        android:textSize="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/admin"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/enterasadmin"
        android:text="ADMIN"
        android:textSize="35dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"/>

    <TextView
        android:id="@+id/enterasstudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER AS STUDENT"
        android:textSize="40dp"
        android:layout_below="@+id/admin"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/student"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/enterasstudent"
        android:text="STUDENT"
        android:textSize="35dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"/>

</RelativeLayout>